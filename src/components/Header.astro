---

const links = [
  { name: "Inicio", href: "/" },
  { name: "Mapas", href: "/mapas" },
  { name: "Blog", href: "/blog" },
  { name: "Sobre Mí", href: "/sobre-mi" },
  { name: "Tienda", href: "/tienda" },
];
---

<header class="fixed w-full z-50 transition-all duration-300" id="main-header">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="z-50 relative">
      <img 
        src="/images/logo.png" 
        alt="RPCR Logo" 
        class="h-12 w-auto hover:opacity-90 transition-opacity" 
        width="150"
        height="48"
        loading="eager"
        fetchpriority="high"
        decoding="async"
      />
    </a>

    <!-- Mobile Menu Button -->
    <button id="menu-btn" class="z-50 md:hidden text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-8">
      {links.map((link) => (
        <a href={link.href} class="text-white hover:text-sunset-gold transition-colors font-body font-medium uppercase tracking-wide text-sm">
          {link.name}
        </a>
      ))}
    </nav>

  </div>
</header>

<!-- Mobile Menu Overlay - Fuera del header para mejor posicionamiento -->
<div id="mobile-menu" class="fixed inset-0 bg-ocean-deep transform translate-x-full transition-transform duration-300 flex flex-col justify-center items-center md:hidden z-[60]">
  <!-- Close Button -->
  <button id="close-menu-btn" class="absolute top-6 right-6 text-white hover:text-sunset-gold transition-colors focus:outline-none z-10" aria-label="Cerrar menú">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
  
  <nav class="flex flex-col space-y-8 text-center">
    {links.map((link) => (
      <a href={link.href} class="text-white text-2xl font-display hover:text-sunset-gold transition-colors">
        {link.name}
      </a>
    ))}
  </nav>
</div>

<script>
  const header = document.getElementById('main-header');
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const closeMenuBtn = document.getElementById('close-menu-btn');
  let isMenuOpen = false;

  // Función para cerrar el menú
  const closeMenu = () => {
    isMenuOpen = false;
    mobileMenu?.classList.add('translate-x-full');
    document.body.style.overflow = '';
  };

  // Scroll effect for glassmorphism
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('bg-ocean-deep/90', 'backdrop-blur-md', 'shadow-md');
    } else {
      header?.classList.remove('bg-ocean-deep/90', 'backdrop-blur-md', 'shadow-md');
    }
  });

  // Mobile Menu Toggle
  menuBtn?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;
    if (isMenuOpen) {
      // Asegurar que el background siempre se muestre
      mobileMenu?.classList.remove('translate-x-full');
      // Forzar el background para garantizar que siempre se muestre
      if (mobileMenu) {
        mobileMenu.classList.add('bg-ocean-deep');
        // También aplicar inline style como respaldo
        mobileMenu.style.backgroundColor = '#1A3A4A'; // ocean-deep color
        // Asegurar posicionamiento correcto desde el viewport
        mobileMenu.style.position = 'fixed';
        mobileMenu.style.top = '0';
        mobileMenu.style.left = '0';
        mobileMenu.style.right = '0';
        mobileMenu.style.bottom = '0';
        mobileMenu.style.width = '100vw';
        mobileMenu.style.height = '100vh';
      }
      document.body.style.overflow = 'hidden';
    } else {
      mobileMenu?.classList.add('translate-x-full');
      document.body.style.overflow = '';
    }
  });

  // Cerrar menú con el botón X
  closeMenuBtn?.addEventListener('click', closeMenu);

  // Cerrar menú al hacer clic en un link
  const menuLinks = mobileMenu?.querySelectorAll('a');
  menuLinks?.forEach(link => {
    link.addEventListener('click', closeMenu);
  });
</script>

